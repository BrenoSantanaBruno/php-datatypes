{
    "name": "nejcc/php-datatypes",
    "description": "PHP Data types",
    "keywords": [
        "nejcc",
        "php-datatypes"
    ],
    "homepage": "https://github.com/nejcc/php-datatypes",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Nejc Cotic",
            "email": "nejc.cotic@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-bcmath": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.3.0"
    },
    "autoload": {
        "psr-4": {
            "Nejcc\\PhpDatatypes\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Nejcc\\PhpDatatypes\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
